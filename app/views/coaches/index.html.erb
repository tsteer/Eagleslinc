  </tbody>
</table>

<div class="page-container">
  <% @articles.each do |article| article.coach == true %>
    <div class="card mb-3">
      <div class="card-block px-4 py-2">
        <div class="article-index-container">
          <div class="article-index-text-container">
            <h1><%= link_to article.title, article_path(article), class: 'card-title py-2' %></h1>
            <div class="card-subtitle"><%= article.subheading %></div>
          </div>
          <%= image_tag article.picture_url(:thumb), class: 'article-index-thumbnail' if article.picture.present? %>
        </div>
      </div>
    </div>
  <% end %>
</div>

